package practice;

import java.util.Scanner;

public class Free {
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
        char s = sc.next().charAt(0);
        switch (s){
            case 'B':
                System.out.println(2);
                break;
            case 'A': 
            case 'D': 
            case 'O': 
            case 'P': 
            case 'Q': 
            case 'R':
                System.out.println(1);
                break;
            default:
                System.out.println(0);
                break;
        }
	}
}
