package review;

public class Thief {
	String name;
	int hp;
	int mp;
	
	public Thief(String name, int hp, int mp) {
		this.name = name;
		this.hp = hp;
		this.mp = mp;
	}
	
	public Thief(String name, int hp) {
		this.name = name;
		this.hp = hp;
		mp = 5;
	}
	
	public Thief(String name) {
//		this.name = name;
//		hp = 40;
//		mp = 5;
		this(name, 40);
	}
}
